<h2 class="text-center">My portfolio.</h2>
<div class="grid">
    <div class="row justify-content-center mt-4">
        <div class="col-2">
           <h3>Search Stocks:</h3> 
        </div>
        <div class="col-5">
            <%= form_tag stock_search_path, remote: true, method: :get do %>
            <div class="input-group input-group-lg mb-3">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock price", class: "form-control", autofocus: true %>
              <div class="input-group-append">
                  <%= button_tag type: :submit, class: "btn btn-success" do %>
                  <%= fa_icon "search" %>
                  <% end %>
              </div>
            </div>
            <% end %>
         </div>
    </div>
    
     <div class="row justify-content-center">
         <div class='col-3 my-2'>
             <div id="results"></div>
         </div>
     </div>
     <% unless @logged_user_stocks.empty? %>
     <%= render 'stocks/list' %>
     <% end %>
</div>







